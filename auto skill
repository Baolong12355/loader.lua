-- ✅ Script auto skill Tower Defense X (mới nhất) -- - Tự động duyệt toàn bộ tower trong workspace.Game.Towers -- - Bỏ qua các tower không có kỹ năng hoặc kỹ năng định hướng -- - Dùng skill 1 đến 3 mỗi 1 giây

local ReplicatedStorage = game:GetService("ReplicatedStorage") local Workspace = game:GetService("Workspace") local Players = game:GetService("Players") local LocalPlayer = Players.LocalPlayer

local TowersFolder = Workspace:WaitForChild("Game"):WaitForChild("Towers") local AbilityRemote = ReplicatedStorage:WaitForChild("Remotes"):WaitForChild("TowerUseAbilityRequest")

-- Danh sách các tower không dùng skill tự động (chặn spam vô nghĩa hoặc lỗi) local Blacklist = { ["Helicopter"] = true, ["Artillery"] = true, ["Combat Drone"] = true, ["Cryo Helicopter"] = true, ["AA Turret"] = true, ["XWM Turret"] = true, ["Barracks"] = true, ["Cryo Blaster"] = true, ["Farm"] = true, ["Grenadier"] = true, ["Juggernaut"] = true, ["Machine Gunner"] = true, ["Relic"] = true, ["Sentry"] = true, ["Scarecrow"] = true, ["Zed"] = true, ["Troll Tower"] = true, ["Missile Trooper"] = true, ["Patrol Boat"] = true, ["Railgunner"] = true, ["Mine Layer"] = true }

-- Dùng skill tự động với ID 1 đến 3 local function autoUseSkill() for _, tower in ipairs(TowersFolder:GetChildren()) do if tower:FindFirstChild("RootPart") then local towerNumber = tonumber(tower.Name:match("^(%d+)") or "") local cleanName = tower.Name:match("%d+%.(.+)") or tower.Name

if towerNumber and not Blacklist[cleanName] then
            for skillId = 1, 3 do
                pcall(function()
                    AbilityRemote:FireServer(towerNumber, skillId)
                end)
            end
        end
    end
end

end

-- Lặp mỗi 1 giây while task.wait(1) do pcall(autoUseSkill) end

